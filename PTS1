    <script>
        // Tab functionality
        function showTab(tabName) {
            // Hide all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(content => content.classList.remove('active'));
            
            // Remove active class from all buttons
            const tabBtns = document.querySelectorAll('.tab-btn');
            tabBtns.forEach(btn => {
                btn.classList.remove('bg-indigo-600', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-indigo-100');
            });
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            
            // Activate selected button
            event.target.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-indigo-100');
            event.target.classList.add('bg-indigo-600', 'text-white');
        }

        // Bone info functionality
        function showBoneInfo(boneName) {
            const boneInfo = document.getElementById('bone-info');
            const info = {
                frontal: 'Tulang Frontal: Membentuk dahi dan melindungi otak bagian depan',
                parietal: 'Tulang Parietal: Membentuk bagian atas dan samping tengkorak',
                temporal: 'Tulang Temporal: Melindungi telinga dan berisi saluran pendengaran',
                occipital: 'Tulang Occipital: Membentuk bagian belakang tengkorak',
                nasal: 'Tulang Hidung: Membentuk batang hidung',
                maxilla: 'Tulang Rahang Atas: Membentuk rahang atas dan langit-langit mulut',
                mandible: 'Tulang Rahang Bawah: Satu-satunya tulang tengkorak yang dapat bergerak'
            };
            
            boneInfo.innerHTML = `<p class="font-semibold text-indigo-800">${info[boneName]}</p>`;
        }

        // Hero info functionality
        function showHeroInfo(heroName) {
            const heroInfo = document.getElementById('hero-info');
            const info = {
                soekarno: {
                    title: 'ğŸ–ï¸ Ir. Soekarno (1901-1970)',
                    content: 'Proklamator kemerdekaan Indonesia dan Presiden RI pertama. Dikenal sebagai "Bung Karno", beliau adalah arsitek kemerdekaan yang merumuskan Pancasila sebagai dasar negara. Memimpin perjuangan diplomasi internasional dan mempersatukan bangsa Indonesia.'
                },
                hatta: {
                    title: 'ğŸ–ï¸ Drs. Mohammad Hatta (1902-1980)',
                    content: 'Proklamator kemerdekaan Indonesia dan Wakil Presiden RI pertama. Dikenal sebagai "Bapak Koperasi Indonesia" dan "The Gentleman". Berperan penting dalam perumusan dasar negara dan sistem ekonomi Indonesia yang berdasarkan kekeluargaan.'
                },
                sudirman: {
                    title: 'âš”ï¸ Jenderal Sudirman (1916-1950)',
                    content: 'Panglima Besar TNI pertama yang memimpin perang gerilya melawan Belanda. Meskipun sakit parah, beliau tetap memimpin dari tandu selama Agresi Militer Belanda II. Simbol keteguhan dan pengorbanan untuk kemerdekaan Indonesia.'
                },
                diponegoro: {
                    title: 'ğŸ‘‘ Pangeran Diponegoro (1785-1855)',
                    content: 'Pemimpin Perang Jawa (1825-1830) melawan penjajahan Belanda. Perlawanannya berlangsung selama 5 tahun dan menjadi perang terbesar yang pernah dihadapi Belanda di Nusantara. Dikenal sebagai "Ratu Adil" oleh rakyat Jawa.'
                },
                cutnyak: {
                    title: 'ğŸ‘¸ Cut Nyak Dhien (1848-1908)',
                    content: 'Pahlawan wanita dari Aceh yang memimpin perlawanan melawan Belanda selama Perang Aceh. Setelah suaminya Teuku Umar gugur, beliau melanjutkan perjuangan gerilya di hutan-hutan Aceh hingga akhir hayatnya.'
                },
                hasanuddin: {
                    title: 'ğŸ¦… Sultan Hasanuddin (1631-1670)',
                    content: 'Raja Gowa-Tallo yang dijuluki "Ayam Jantan dari Timur" oleh Belanda karena keberaniannya. Memimpin perlawanan sengit melawan VOC dalam Perang Makassar (1666-1669) untuk mempertahankan kedaulatan Sulawesi Selatan.'
                }
            };
            
            const selectedHero = info[heroName];
            heroInfo.innerHTML = `
                <h4 class="font-bold text-indigo-800 text-lg mb-2">${selectedHero.title}</h4>
                <p class="text-gray-700 text-sm leading-relaxed">${selectedHero.content}</p>
            `;
        }

        // Quiz functionality
        const quizQuestions = [
            {
                question: "Apa fungsi utama tulang femur?",
                options: ["Melindungi jantung", "Menopang berat badan", "Menggerakkan tangan", "Melindungi otak"],
                correct: 1
            },
            {
                question: "Jenis sendi yang memungkinkan gerakan ke segala arah adalah?",
                options: ["Sendi engsel", "Sendi peluru", "Sendi putar", "Sendi geser"],
                correct: 1
            },
            {
                question: "Otot yang bekerja secara sadar adalah?",
                options: ["Otot polos", "Otot jantung", "Otot lurik", "Otot involunter"],
                correct: 2
            },
            {
                question: "VOC dibentuk pada tahun?",
                options: ["1600", "1602", "1605", "1610"],
                correct: 1
            },
            {
                question: "Tokoh yang memimpin Perang Jawa adalah?",
                options: ["Tuanku Imam Bonjol", "Pangeran Diponegoro", "Cut Nyak Dhien", "Sultan Hasanuddin"],
                correct: 1
            },
            {
                question: "Trilogi van Deventer terdiri dari?",
                options: ["Edukasi, Irigasi, Transmigrasi", "Ekonomi, Politik, Sosial", "Pertanian, Industri, Perdagangan", "Militer, Sipil, Agama"],
                correct: 0
            },
            {
                question: "Penyakit tulang yang disebabkan kekurangan kalsium adalah?",
                options: ["Rakitis", "Osteoporosis", "Skoliosis", "Artritis"],
                correct: 1
            },
            {
                question: "Sistem saraf berfungsi untuk?",
                options: ["Mencerna makanan", "Mengalirkan darah", "Mengkoordinasi tubuh", "Bernapas"],
                correct: 2
            },
            {
                question: "Organisasi pergerakan nasional pertama di Indonesia adalah?",
                options: ["Sarekat Islam", "Budi Utomo", "Indische Partij", "Perhimpunan Indonesia"],
                correct: 1
            },
            {
                question: "Tujuan peristiwa Rengasdengklok adalah?",
                options: ["Menyerah kepada Jepang", "Mengamankan Soekarno-Hatta", "Berunding dengan Belanda", "Membentuk pemerintahan"],
                correct: 1
            }
        ];

        let currentQuestion = 0;
        let score = 0;
        let selectedAnswer = null;

        function loadQuestion() {
            const question = quizQuestions[currentQuestion];
            document.getElementById('question-number').textContent = currentQuestion + 1;
            document.getElementById('question-text').textContent = question.question;
            
            const optionsContainer = document.getElementById('options-container');
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, index) => {
                const optionDiv = document.createElement('div');
                optionDiv.className = 'quiz-option bg-gray-50 hover:bg-indigo-50 p-4 rounded-lg cursor-pointer border-2 border-transparent transition-all';
                optionDiv.innerHTML = `<span class="font-semibold">${String.fromCharCode(65 + index)}.</span> ${option}`;
                optionDiv.onclick = () => selectAnswer(index, optionDiv);
                optionsContainer.appendChild(optionDiv);
            });
            
            // Update progress bar
            const progress = ((currentQuestion + 1) / quizQuestions.length) * 100;
            document.getElementById('progress-bar').style.width = progress + '%';
            
            // Update buttons
            document.getElementById('prev-btn').disabled = currentQuestion === 0;
            document.getElementById('next-btn').disabled = true;
            selectedAnswer = null;
        }

        function selectAnswer(index, element) {
            // Remove previous selection
            document.querySelectorAll('.quiz-option').forEach(opt => {
                opt.classList.remove('border-indigo-500', 'bg-indigo-50');
                opt.classList.add('border-transparent');
            });
            
            // Highlight selected
            element.classList.add('border-indigo-500', 'bg-indigo-50');
            element.classList.remove('border-transparent');
            
            selectedAnswer = index;
            document.getElementById('next-btn').disabled = false;
        }

        function nextQuestion() {
            if (selectedAnswer === null) return;
            
            // Check answer
            const question = quizQuestions[currentQuestion];
            const options = document.querySelectorAll('.quiz-option');
            
            if (selectedAnswer === question.correct) {
                score++;
                options[selectedAnswer].classList.add('correct');
            } else {
                options[selectedAnswer].classList.add('incorrect');
                options[question.correct].classList.add('correct');
            }
            
            document.getElementById('score').textContent = score;
            
            setTimeout(() => {
                currentQuestion++;
                if (currentQuestion < quizQuestions.length) {
                    loadQuestion();
                } else {
                    showResults();
                }
            }, 1500);
        }

        function previousQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                loadQuestion();
            }
        }

        function showResults() {
            document.getElementById('quiz-container').classList.add('hidden');
            document.getElementById('result-container').classList.remove('hidden');
            document.getElementById('final-score').textContent = score;
        }

        function restartQuiz() {
            currentQuestion = 0;
            score = 0;
            selectedAnswer = null;
            document.getElementById('score').textContent = '0';
            document.getElementById('quiz-container').classList.remove('hidden');
            document.getElementById('result-container').classList.add('hidden');
            loadQuestion();
        }

        // Initialize quiz
        loadQuestion();
    </script>
